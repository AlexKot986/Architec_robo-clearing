<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="RoboClearingApp.RobotCreatePage"
             Title="RobotCreatePage">
    <VerticalStackLayout Padding="0,80,0,0" HorizontalOptions="Center">
        <HorizontalStackLayout Spacing="150">
            <Label 
            Text="CREATE"
            FontSize="32"
            HorizontalOptions="Start" />
        <Button Text="back" Clicked="BackBtn"/>
        </HorizontalStackLayout>
        <HorizontalStackLayout HorizontalOptions="Center" Spacing="50" Margin="0,80,0,0">
            <Label VerticalOptions="Center" Text="Model:"/>
            <Entry VerticalOptions="Center" Text="Model"/>
        </HorizontalStackLayout>
        <HorizontalStackLayout HorizontalOptions="Center" Spacing="50" Margin="0,20,0,0">
            <Label VerticalOptions="Center" Text="Name:"/>
            <Entry VerticalOptions="Center" Text="Name"/>
        </HorizontalStackLayout>

        <Button Text="create" Clicked="CreateBtn"/>
    </VerticalStackLayout>
</ContentPage>